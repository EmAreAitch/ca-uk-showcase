<main class="min-h-screen bg-background font-inter py-32 px-6">
  <!-- Consultation Fee Section -->
  <section
    class="max-w-4xl mx-auto bg-white shadow-lg rounded-2xl p-10 border border-secondary"
  >
    <h1 class="text-3xl font-heading text-primary mb-6">Consultation Fee Structure</h1>

    <p class="text-secondary mb-8 text-lg">
      Below is the fee structure applicable for initial consultations and document reviews.
      This helps manage appointments efficiently and ensures fair use of time for all clients.
    </p>

    <div class="space-y-6">
      <div
        class="flex justify-between items-center p-6 bg-background rounded-xl border border-secondary"
      >
        <span class="text-lg font-medium text-primary"
          >Initial Consultation (30 mins)</span
        >
        <span class="text-xl font-bold text-accent">£50</span>
      </div>

      <div
        class="flex justify-between items-center p-6 bg-background rounded-xl border border-secondary"
      >
        <span class="text-lg font-medium text-primary"
          >Document Review (per set)</span
        >
        <span class="text-xl font-bold text-accent">£75</span>
      </div>

      <div
        class="flex justify-between items-center p-6 bg-background rounded-xl border border-secondary"
      >
        <span class="text-lg font-medium text-primary"
          >Comprehensive Tax Advisory (1 hour)</span
        >
        <span class="text-xl font-bold text-accent">£150</span>
      </div>
    </div>

    <p class="mt-10 text-sm text-secondary">
      *Consultation fee is adjusted against your final invoice if you engage our services further.
    </p>
  </section>

  <!-- Bank Transfer Payment Section -->
  <section
    class="max-w-4xl mx-auto mt-12 bg-white shadow-md rounded-2xl p-10 border border-secondary"
  >
    <h2 class="text-2xl font-heading text-primary mb-4">
      Make a Payment via Bank Transfer
    </h2>
    <p class="text-secondary mb-6 text-base">
      Use the following bank details to make your consultation fee payment:
    </p>

    <div
      class="flex flex-col md:flex-row md:items-center md:justify-between gap-6 bg-background border border-dashed border-secondary rounded-xl p-6 mb-6"
    >
      <div class="flex-1">
        <p class="text-lg font-semibold text-primary">
          Account Name: <span class="text-accent">Emma Collins Ltd</span><br />
          Sort Code: <span class="text-accent">12-34-56</span><br />
          Account Number: <span class="text-accent">12345678</span>
        </p>
        <button
          id="bank-copy-btn"
          class="mt-4 bg-accent text-white font-medium px-5 py-2 rounded-xl hover:brightness-110 transition"
        >
          Copy Details
        </button>
      </div>
      <div class="flex justify-center">
        <img
          src="/images/qr_img.avif"
          alt="Scan to Pay"
          class="w-40 h-40 object-contain border border-secondary rounded-xl"
        />
      </div>
    </div>

    <p class="text-sm text-secondary">
      After payment, please share the transaction reference via email or WhatsApp for confirmation.
    </p>
  </section>

  <!-- Inline Script -->
  <script>
    const bankDetails = `Account Name: Emma Collins Ltd
Sort Code: 12-34-56
Account Number: 12345678`;

    const bankCopyButton = document.getElementById("bank-copy-btn");
    bankCopyButton.addEventListener("click", () => {
      navigator.clipboard
        .writeText(bankDetails)
        .then(() => {
          bankCopyButton.textContent = "Copied!";
        })
        .catch(() => {
          alert("Failed to copy bank details.");
        });
    });
  </script>
</main>
